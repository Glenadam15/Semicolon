@using Newtonsoft.Json.Linq

<div class="row">

	<div class="col">
		@for (int i = 0; i < ViewBag.Cource.courceImgs.Count; i++) {

			JObject img = ViewBag.Cource.courceImgs[i];
			bool firstImg = bool.Parse(img["firstImg"].ToString());
			if (firstImg)
			{
				var imgName = @img["img"];
				<img src="~/img/cource_img/@imgName" style="width:250px;height:250px" class="mb-3" />
				break;
			}
		}

		<div class="container-fluid">
			@for (int i = 0; i < ViewBag.Cource.courceImgs.Count; i++)
			{

				JObject img = ViewBag.Cource.courceImgs[i];
				bool firsImg = bool.Parse(img["firstImg"].ToString());
				if (!firsImg)
				{
					var imgName = @img["img"];
					<img src="~/img/cource_img/@imgName" style="width:50px;height:50px" />
				}
			}
		</div>

	</div>
	<div class="col">
		<h2>@ViewBag.Cource.Name</h2>
		<table class="table">
			<tr>
				<td>Category:</td>
				<td>@ViewBag.Cource.categoryId</td>
			</tr>
		</table>
	</div>
</div>
<div class="row">
	<div class="col">
		<h2>Description</h2>
		@ViewBag.Cource.description
		<br />
	</div>
</div>